<!DOCTYPE html>
<html>
<head>
  <title>Zenodotos</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="#">Zenodotos</a>
      <ul class="nav">
        <li><%= link_to "Dashboard", admin_path %></li>
        <li><%= link_to "BÃ¼cher", admin_books_path %></li>
        <li><%= link_to "Sammlungen", admin_collections_path %></li>
        <li><%= link_to "Entleiher", admin_borrowers_path %></li>
        <li><%= link_to "Leihzettel", admin_printouts_path %></li>
        <li><%= link_to "Mahnungen", admin_reminders_path %></li>
      </ul>
      <ul class="nav pull-right">
        <li><%= image_tag current_admin_user.gravatar_url, :class => "avatar" %></li> 
        <li><%= link_to "#{current_admin_user.email} abmelden.", destroy_admin_user_session_path, :method => :delete %></li>
      </ul>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3 sidebar">
      <%= yield :sidebar %>
    </div>
    <div class="span9">
      <% flash.each do |type, message| %>
        <div class="alert alert-<%= type %>">
          <a class="close" data-dismiss="alert">&times;</a>
          <%= message %>
        </div>
      <% end %>
      <%= yield :content %>
    </div>
  </div>
</div>
</body>
</html>
