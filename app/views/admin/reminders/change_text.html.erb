<% content_for :content do %>
  <div class="page-header">
    <h1>Mahntext</h1>
  </div>
  <div class="row">
    <div class="span12">
      <%= form_tag "save_text", :class => "well" do %>
        <label for='intro'>Einleitung und Haupttext</label>
        <textarea rows=5 class=span10 id='intro' name='intro'><%=Settings[:reminder_mail][:intro] %></textarea>
        <label for='outro'>Verabschiedung</label>
        <textarea id='outro' rows=5 class=span10 name='outro'><%=Settings[:reminder_mail][:outro] %></textarea>

        <div class="form-actions">
          <button type="submit" class="btn">Speichern</button> 
        </div>
      <% end %>
    </div>
  </div>
<% end %>
