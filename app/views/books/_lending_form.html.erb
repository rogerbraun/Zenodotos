<div class="modal">
  <div class="modal-header">
    <h3>Buch verleihen</h3>
  </div>
  <%= semantic_form_for @lending, :url => create_book_lending_path do |f| %>
    <div class="modal-body">
      <%= f.input :return_date, :as => :string %>
      <%= f.input :borrower %>
      <%= f.input :book_id, :as => :hidden %>
      
    </div>
    <div class="modal-footer">
      <button>Bla</button>
    </div>
  <% end %>
</div>
